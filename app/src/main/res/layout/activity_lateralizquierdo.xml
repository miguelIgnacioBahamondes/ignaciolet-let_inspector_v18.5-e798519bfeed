                            android:layout_alignTop="@+id/textCantLI"
                            android:layout_toEndOf="@+id/textCantLI"
                            android:textColor="@android:color/background_light"
                            android:textSize="12sp"
                            android:visibility="gone"
                            />

                    </LinearLayout>




                    <ImageView
                        android:id="@+id/imagenIzDanoE"
                        android:layout_width="130dp"
